#!/bin/bash

# scp DB backup file to a secure server
# 
# by Jack @ 2015-03-23

# include config file
. ./conf

# if there is dumpdir
if [ $# -lt 1 ]; then
	echo "USAGE: $0 <dump-dir> <target-dir>"
	echo "TERMINATE !!!"
	exit 1
fi
dumpdir=$1
if [ $# -gt 1 ]; then
	targetdir=$2
fi

# begin scp
$SCP $dumpdir/$today.$suffix $server_user@$server_ip:$targetdir

exit 0
