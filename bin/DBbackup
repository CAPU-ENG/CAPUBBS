#!/bin/bash

# backup MySQL everyday
# keep for a week
#
# By Jack @ 2015-03-22

# include config file
. ./conf

# check if there is custom DUMPDIR
if [ $# -gt 0 ]; then
	dumpdir=$1
fi

# make dir
if [ ! -d "$dumpdir" ]; then
	$MKDIR -p $dumpdir
fi

# begin dump
cd $dumpdir
$DUMP -u$mysql_user -p$mysql_passwd $database > $database.sql
$DUMP -u$mysql_user -p$mysql_passwd $database2 > $database2.sql
$TAR zcf $today.$suffix $database2.sql $database.sql
$RM *.sql

# remove file a week ago
if [ -f "$last7.$suffix" ]; then
	$RM $last7.$suffix
fi

exit 0
